generator client {
    provider = "prisma-client-js"
    binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  firstName     String?
  lastName      String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?
  bio           String?   @db.Text
  interests     String[]  // Array of writing interests
  genres        String[]  // Array of favorite genres
  accounts      Account[]
  sessions      Session[]
  submissions   ExerciseSubmission[]
  communityPosts CommunityPost[]
  progress      UserProgress[]
  
  // Friend relationships
  sentFriendRequests     FriendRequest[] @relation("SentRequests")
  receivedFriendRequests FriendRequest[] @relation("ReceivedRequests")
  friendshipsInitiated   Friendship[]    @relation("FriendshipUser1")
  friendshipsReceived    Friendship[]    @relation("FriendshipUser2")
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model FriendRequest {
  id         String   @id @default(cuid())
  senderId   String
  receiverId String
  status     String   @default("pending") // pending, accepted, rejected
  sender     User     @relation("SentRequests", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("ReceivedRequests", fields: [receiverId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([senderId, receiverId])
  @@index([receiverId])
  @@index([senderId])
}

model Friendship {
  id        String   @id @default(cuid())
  user1Id   String
  user2Id   String
  user1     User     @relation("FriendshipUser1", fields: [user1Id], references: [id], onDelete: Cascade)
  user2     User     @relation("FriendshipUser2", fields: [user2Id], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([user1Id, user2Id])
  @@index([user1Id])
  @@index([user2Id])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model WritingTopic {
  id          String    @id @default(cuid())
  title       String
  slug        String    @unique
  description String    @db.Text
  content     String    @db.Text
  exercises   Exercise[]
  order       Int       @default(0)
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model Exercise {
  id          String    @id @default(cuid())
  title       String
  prompt      String    @db.Text
  instructions String   @db.Text
  topicId     String
  topic       WritingTopic @relation(fields: [topicId], references: [id], onDelete: Cascade)
  order       Int       @default(0)
  submissions ExerciseSubmission[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

model ExerciseSubmission {
  id         String   @id @default(cuid())
  content    String   @db.Text
  userId     String
  exerciseId String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exercise   Exercise @relation(fields: [exerciseId], references: [id], onDelete: Cascade)
  isPublic   Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([userId, exerciseId])
}

model CommunityPost {
  id        String   @id @default(cuid())
  title     String
  content   String   @db.Text
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  exerciseId String? // Optional link to specific exercise
  isPublic  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Milestone {
  id          String   @id @default(cuid())
  title       String
  description String   @db.Text
  week        Int      // 1-12 for 3 months
  order       Int      @default(0)
  userProgress UserProgress[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model UserProgress {
  id          String    @id @default(cuid())
  userId      String
  milestoneId String
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestone   Milestone @relation(fields: [milestoneId], references: [id], onDelete: Cascade)
  completed   Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@unique([userId, milestoneId])
}
